generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  user
  admin
  master
}

enum Gender {
  male
  female
  other
}

model User {
  id          String   @id @default(ulid())
  email       String   @unique
  role        UserRole @default(user)
  firstName   String   @map("first_name")
  lastName    String   @map("last_name")
  gender      Gender?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  createdBy   String   @map("created_by")
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz
  updatedBy   String   @map("updated_by")

  @@map("users")
}

model RecruitYear {
  recruitYear Int      @id @unique @map("recruit_year")
  displayName String   @map("display_name")
  themeColor  String   @map("theme_color")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  createdBy   String   @map("created_by")
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz
  updatedBy   String   @map("updated_by")
  selectionProcesses SelectionProcess[]

  @@map("recruit_years")
}

model SelectionProcess {
  id         String   @id @default(ulid())
  name       String
  order      Int
  recruitYear Int     @map("recruit_year")
  recruitYearRelation RecruitYear @relation(fields: [recruitYear], references: [recruitYear], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz
  createdBy  String   @map("created_by")
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz
  updatedBy  String   @map("updated_by")

  @@unique([recruitYear, name], name: "recruitYear_name")
  @@map("selection_processes")
}

model Outbox {
  id        String   @id @default(ulid())
  eventType String   @map("event_type")
  payload   Json
  status    String   @default("pending") // pending, processed, failed
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  processedAt DateTime? @map("processed_at")

  @@map("outbox")
}
